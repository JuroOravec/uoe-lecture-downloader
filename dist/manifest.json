{
    "name": "UoE Media Hopper Replay Lectures Offline",
    "short_name": "UoE Lectures Offline",
    "version": "1.0.1",
    "description": "Study for your exams with no Internet connection! Download your lectures on University of Edinburgh's Media Hopper Replay.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://echo360.org.uk/*"],
        "all_frames": true,
        "js": ["videoSrcFetcher.js"],
        "run_at": "document_idle"
    }],
    "permissions": [
        "declarativeContent",
        "tabs",
        "storage",
        "downloads"
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/open-book16.png",
            "32": "images/open-book32.png",
            "48": "images/open-book48.png",
            "128": "images/open-book128.png",
            "256": "images/open-book256.png"
        }
    },
    "icons": {
        "16": "images/open-book16.png",
        "32": "images/open-book32.png",
        "48": "images/open-book48.png",
        "128": "images/open-book128.png",
        "256": "images/open-book256.png"
    }
}