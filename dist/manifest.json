{
    "name": "UoE Lecture Downloader",
    "version": "0.0.0",
    "description": "Download lectures from Media Hopper Replay with a click of a button. For those who want to watch lectures offline. To access Media Hopper Replay, you must a student at the University of Edinburgh. For personal use only.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["declarativeContent"],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }
}